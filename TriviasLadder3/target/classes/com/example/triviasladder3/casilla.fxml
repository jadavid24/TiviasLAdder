<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="100.0" prefWidth="100.0" xmlns="http://javafx.com/javafx/15" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.triviasladder3.controller.CasillaController">
   <VBox fx:id="VboxExterno" prefHeight="100.0" prefWidth="100.0" styleClass="casilla" stylesheets="@style.css">
      <HBox fx:id="HboxInterno" prefHeight="108.0" prefWidth="100.0" styleClass="labelNumero" stylesheets="@style.css">
         <VBox prefHeight="200.0" prefWidth="100.0">
            <children>
               <HBox prefHeight="100.0" prefWidth="200.0">
                  <children>
                     <ImageView fx:id="jugador1" fitHeight="53.0" fitWidth="37.0" nodeOrientation="INHERIT" pickOnBounds="true" preserveRatio="true">
                        <image>
                           <Image url="@../../../ficha_negra.png" />
                        </image>
                     </ImageView>
                     <ImageView fx:id="jugador2" fitHeight="58.0" fitWidth="37.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                           <Image url="@../../../ficha_naranja.png" />
                        </image>
                     </ImageView>
                  </children>
               </HBox>
               <Label fx:id="number" alignment="CENTER" prefHeight="26.0" prefWidth="79.0" text="3" textFill="WHITE">
                  <font>
                     <Font name="Comic Sans MS Bold" size="18.0" />
                  </font>
               </Label>
            </children>
         </VBox>
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </HBox>
   </VBox>
</AnchorPane>
